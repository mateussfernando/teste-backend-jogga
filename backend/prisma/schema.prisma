generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:senha123@localhost:5432/leadsdb"
}

model Lead {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String   
  telefone  String
  status    LeadStatus @default(NOVO)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("leads")
}

enum LeadStatus {
  NOVO
  EM_CONTATO 
  CONVERTIDO
}